<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient từ trắng 10% opacity xuống trắng 10% opacity -->
    <gradient
        android:startColor="#1AFFFFFF"
        android:endColor="#1AFFFFFF"
        android:angle="90" />

    <!-- Bo tròn -->
    <corners android:radius="500dp" />

    <!-- Nếu muốn viền trắng đầy đủ -->
    <stroke
        android:width="2dp"
        android:color="#0000" />
</shape>
