<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FAFAFA">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="#4CAF50"
            android:paddingTop="10dp">
            <include layout="@layout/back_button"/>
            <TextView
                android:layout_width="270dp"
                android:layout_height="0dp"></TextView>
            <include layout="@layout/menu_button"></include>
        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#FF9800"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="50dp"
            app:shapeAppearance="@style/bg_circleStyle" />
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="#2196F3"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="80dp"
            app:shapeAppearance="@style/bg_circleStyle"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="#9C27B0"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="100dp"
            app:shapeAppearance="@style/bg_circleStyle"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#FFEB3B"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="260dp"
            app:shapeAppearance="@style/bg_circleStyle"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="#F44336"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="300dp"
            app:shapeAppearance="@style/bg_circleStyle"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#4CAF50"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="340dp"
            app:shapeAppearance="@style/bg_circleStyle"
            />

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/bg_cirle"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <ImageView
                android:src="@mipmap/ic_cup_foreground"
                android:layout_width="56dp"
                android:layout_height="56dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="240dp"
            android:layout_height="60dp">
            <TextView
                android:paddingLeft="40dp"
                android:textSize="20dp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:text="Congratulations!"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <TextView
                android:paddingLeft="30dp"
                android:textColor="#666666"
                android:textSize="16dp"
                android:text="You completed the quiz"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="280dp"
            android:layout_height="170dp">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:weightSum="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:paddingLeft="15dp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:textSize="48dp"
                        android:text="8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:textSize="48dp"
                        android:text="/"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:textSize="48dp"
                        android:text="10"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:paddingLeft="80dp"
                android:textSize="16dp"
                android:textColor="#666666"
                android:text="Correct Answers"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="220dp"
                android:layout_height="64dp">
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="32dp">
                    <TextView
                        android:paddingLeft="10dp"
                        android:textColor="#666666"
                        android:text="Accuracy"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:paddingLeft="70dp"
                        android:text="80%"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="32dp">
                    <TextView
                        android:paddingLeft="10dp"
                        android:textColor="#666666"
                        android:text="Time Taken"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:paddingLeft="70dp"
                        android:text="4:32"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:background="@drawable/result_btn"
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:layout_height="50dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="80dp"
                android:paddingTop="15dp"
                android:text="Try Again"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnTryAgain"
                android:background="#0000"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </Button>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_back"
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:layout_height="50dp">

            <TextView
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:paddingTop="15dp"
                android:paddingLeft="80dp"
                android:text="Back to Home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnBack"
                android:background="#0000"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </Button>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
