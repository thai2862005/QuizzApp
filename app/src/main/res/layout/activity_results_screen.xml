<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="right"
        android:layout_marginTop="25dp">
        <include layout="@layout/menu_button"/>
    </LinearLayout>
    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!-- Decorative Circles -->
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#FF9800"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="50dp"
            app:shapeAppearance="@style/bg_circleStyle" />
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="#2196F3"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="80dp"
            app:shapeAppearance="@style/bg_circleStyle"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="#9C27B0"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="100dp"
            app:shapeAppearance="@style/bg_circleStyle"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#FFEB3B"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="260dp"
            app:shapeAppearance="@style/bg_circleStyle"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="#F44336"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="300dp"
            app:shapeAppearance="@style/bg_circleStyle"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#4CAF50"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="340dp"
            app:shapeAppearance="@style/bg_circleStyle"/>
    </RelativeLayout>

    <!-- Content wrapped in ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp">

            <!-- Trophy -->
            <LinearLayout
                android:background="@drawable/bg_cirle"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <ImageView
                    android:src="@mipmap/ic_cup_foreground"
                    android:layout_width="56dp"
                    android:layout_height="56dp"/>
            </LinearLayout>

            <!-- Congratulations Text -->
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvTitle"
                    android:textSize="20dp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:text="Congratulations!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="#666666"
                    android:textSize="14dp"
                    android:text="You completed the quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>

                <!-- Dynamic Message -->
                <TextView
                    android:id="@+id/tvMessage"
                    android:paddingTop="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:gravity="center"
                    android:scrollHorizontally="false"
                    android:ellipsize="none"
                    android:breakStrategy="simple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Score Box -->
            <LinearLayout
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <!-- Score -->
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvScore"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:textSize="48dp"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:textSize="48dp"
                        android:text="/"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tvTotal"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:textSize="48dp"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <!-- Label -->
                <TextView
                    android:textSize="16dp"
                    android:textColor="#666666"
                    android:text="Correct Answers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:gravity="center"/>

                <!-- Accuracy & Time -->
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#666666"
                            android:text="Accuracy"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvAccuracy"
                            android:text="0%"
                            android:textColor="#333333"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#666666"
                            android:text="Time Taken"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvTime"
                            android:text="0:00"
                            android:textColor="#333333"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Buttons -->
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:background="@drawable/result_btn"
                android:layout_gravity="center"
                android:layout_width="240dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="80dp"
                    android:paddingTop="15dp"
                    android:text="Try Again"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btnTryAgain"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_back"
                android:layout_gravity="center"
                android:layout_width="240dp"
                android:layout_height="50dp">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:paddingTop="15dp"
                    android:paddingLeft="80dp"
                    android:text="Back to Home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btnBack"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
