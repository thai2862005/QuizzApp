<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:background="#4CAF50"
        android:layout_width="360dp"
        android:layout_height="100dp">
        <ImageView
            android:src="@mipmap/ic_cup_foreground"
            android:layout_width="40dp"
            android:layout_height="30dp"/>
        <TextView
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="#FFFFFF"
            android:text=" Leaderboard"
            android:layout_width="150dp"
            android:layout_height="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="280dp"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_marginRight="20dp"
            android:paddingTop="40dp"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/bg_user"
                android:src="@mipmap/ic_user_foreground"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        <LinearLayout
            android:background="#C0C0C0"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="100dp">
            <TextView
                android:layout_gravity="center"
                android:text="2"
                android:textSize="32dp"
                android:textStyle="bold"
                android:layout_width="20dp"
                android:layout_height="40dp">
                
            </TextView>
            <TextView
                android:layout_gravity="center"
                android:text="Sarah"
                android:layout_width="33dp"
                android:layout_height="15dp"/>
            <TextView
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:text="850 pts"
                android:layout_width="37dp"
                android:layout_height="15dp"/>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/bg_user01"
                android:src="@mipmap/ic_king_foreground"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <LinearLayout
                android:background="#FFD700"
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="130dp">
                <TextView
                    android:layout_gravity="center"
                    android:text="1"
                    android:textSize="32dp"
                    android:textStyle="bold"
                    android:layout_width="20dp"
                    android:layout_height="40dp">

                </TextView>
                <TextView
                    android:layout_gravity="center"
                    android:text="Sarah"
                    android:layout_width="33dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    android:text="950 pts"
                    android:layout_width="37dp"
                    android:layout_height="15dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_user"
                android:src="@mipmap/ic_user_foreground"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#CD7F32"
                android:orientation="vertical">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="3"
                    android:textSize="32dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="33dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:text="Sarah" />

                <TextView
                    android:layout_width="37dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:text="850 pts" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
   <LinearLayout
       android:layout_marginTop="70dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_marginBottom="10dp"
           android:layout_width="320dp"
           android:layout_height="70dp"
           android:layout_gravity="center"
           android:background="@drawable/bg_op1"
           android:orientation="horizontal">

           <RelativeLayout
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp">

               <ImageButton
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:background="@drawable/bg_option">
               </ImageButton>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:paddingLeft="17dp"
                   android:paddingTop="7dp"
                   android:text="4"
                   android:textColor="#666666"
                   android:textSize="25dp"
                   android:textStyle="bold" />
           </RelativeLayout>

           <LinearLayout
               android:orientation="vertical"
               android:weightSum="2"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:paddingTop="10dp"
                   android:textStyle="bold"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:paddingLeft="10dp"
                   android:text="Emily"
                   android:textColor="#333333"
                   android:textSize="16dp"></TextView>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:paddingLeft="10dp"
                   android:text="680 points"
                   android:textColor="#999999"
                   android:textSize="16dp"></TextView>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_marginBottom="10dp"
           android:layout_width="320dp"
           android:layout_height="70dp"
           android:layout_gravity="center"
           android:background="@drawable/bg_op1"
           android:orientation="horizontal">

           <RelativeLayout
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp">

               <ImageButton
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:background="@drawable/bg_option">
               </ImageButton>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:paddingLeft="17dp"
                   android:paddingTop="7dp"
                   android:text="5"
                   android:textColor="#666666"
                   android:textSize="25dp"
                   android:textStyle="bold" />
           </RelativeLayout>

           <LinearLayout
               android:orientation="vertical"
               android:weightSum="2"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:paddingTop="10dp"
                   android:textStyle="bold"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:paddingLeft="10dp"
                   android:text="Emily"
                   android:textColor="#333333"
                   android:textSize="16dp"></TextView>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:paddingLeft="10dp"
                   android:text="680 points"
                   android:textColor="#999999"
                   android:textSize="16dp"></TextView>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_marginBottom="10dp"
           android:layout_width="320dp"
           android:layout_height="70dp"
           android:layout_gravity="center"
           android:background="@drawable/bg_op_true"
           android:orientation="horizontal">

           <RelativeLayout
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp">

               <ImageButton
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:background="@drawable/bg_true">
               </ImageButton>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:paddingLeft="17dp"
                   android:paddingTop="7dp"
                   android:text="6"
                   android:textColor="#FFFF"
                   android:textSize="25dp"
                   android:textStyle="bold" />
           </RelativeLayout>

           <LinearLayout
               android:orientation="vertical"
               android:weightSum="2"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:paddingTop="10dp"
                   android:textStyle="bold"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:paddingLeft="10dp"
                   android:text="You"
                   android:textColor="#333333"
                   android:textSize="16dp"></TextView>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:paddingLeft="10dp"
                   android:text="680 points"
                   android:textColor="#999999"
                   android:textSize="16dp"></TextView>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="320dp"
           android:layout_height="70dp"
           android:layout_gravity="center"
           android:background="@drawable/bg_op1"
           android:orientation="horizontal">

           <RelativeLayout
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp">

               <ImageButton
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:background="@drawable/bg_option">
               </ImageButton>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:paddingLeft="17dp"
                   android:paddingTop="7dp"
                   android:text="7"
                   android:textColor="#666666"
                   android:textSize="25dp"
                   android:textStyle="bold" />
           </RelativeLayout>

           <LinearLayout
               android:orientation="vertical"
               android:weightSum="2"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:paddingTop="10dp"
                   android:textStyle="bold"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:paddingLeft="10dp"
                   android:text="Emily"
                   android:textColor="#333333"
                   android:textSize="16dp"></TextView>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:paddingLeft="10dp"
                   android:text="680 points"
                   android:textColor="#999999"
                   android:textSize="16dp"></TextView>
           </LinearLayout>
       </LinearLayout>
   </LinearLayout>
</LinearLayout>