<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="25dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <include layout="@layout/back_button"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/ic_cup_foreground"
                android:layout_width="40dp"
                android:layout_height="30dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="24dp"
                android:text=" Leaderboard"
                android:layout_width="150dp"
                android:layout_height="30dp"/>
        </LinearLayout>
      <include layout="@layout/menu_button"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:layout_marginLeft="-55dp"
            android:layout_marginBottom="-50dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:src="@drawable/phaohoa"
            android:rotation="40"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:elevation="1dp">
        <LinearLayout
            android:layout_marginRight="20dp"
            android:paddingTop="40dp"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/bg_user"
                    android:src="@mipmap/ic_user_foreground"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:elevation="1dp"
                    android:layout_marginBottom="40dp"/>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_leaderboard2"
                    android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="15dp"
                            android:text="2"
                            android:textSize="32dp"
                            android:textStyle="bold"
                            android:textColor="@color/white">
                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvTop2Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTop2Point"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/white" />
                    </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/bg_user01"
                    android:src="@mipmap/ic_king_foreground"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="50dp"
                    android:elevation="1dp" />
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="130dp"
                    android:background="@drawable/bg_leaderboard1"
                    android:orientation="vertical"
                    android:layout_gravity="bottom">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="32dp"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvTop1Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/white" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvTop1Point"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/white" />
                    </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/bg_user"
                android:src="@mipmap/ic_user_foreground"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="1dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_leaderboard3"
                android:orientation="vertical"
                android:layout_gravity="bottom">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="3"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/white">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvTop3Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvTop3Point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
        <ImageView
            android:layout_marginRight="-55dp"
            android:layout_marginBottom="-50dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@drawable/phaohoa"
            android:rotation="-40"/>
    </FrameLayout>

    <ListView
        android:id="@+id/lv_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:divider="#0000"
        android:padding="20dp" />
</LinearLayout>