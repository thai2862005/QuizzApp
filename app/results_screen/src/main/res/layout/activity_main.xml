<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FAFAFA">

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_rd"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp" />

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_rd2"
            android:layout_marginStart="140dp"
            android:layout_marginTop="80dp" />

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_rd3"
            android:layout_marginStart="220dp"
            android:layout_marginTop="130dp" />

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_rd4"
            android:layout_marginStart="300dp"
            android:layout_marginTop="60dp" />

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_rd5"
            android:layout_marginStart="380dp"
            android:layout_marginTop="100dp" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/bg_cirle"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <ImageView
                android:src="@mipmap/ic_cup_foreground"
                android:layout_width="56dp"
                android:layout_height="56dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="240dp"
            android:layout_height="60dp">
        <TextView
            android:paddingLeft="40dp"
            android:textSize="20dp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:text="Congratulations!" 
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
            <TextView
                android:paddingLeft="30dp"
                android:textColor="#666666"
                android:textSize="16dp"
                android:text="You completed the quiz"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="280dp"
            android:layout_height="170dp">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:weightSum="3"
                android:layout_width="110dp"
                android:layout_height="50dp">
                <TextView
                    android:paddingLeft="15dp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:textSize="30dp"
                    android:text="8"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:paddingLeft="15dp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:textSize="30dp"
                    android:text="/"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:textSize="30dp"
                    android:text="10"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                android:paddingLeft="80dp"
                android:textSize="16dp"
                android:textColor="#666666"
                android:text="Correct Answers"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="220dp"
                android:layout_height="64dp">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="32dp">
                <TextView
                    android:paddingLeft="10dp"
                    android:textColor="#666666"
                    android:text="Accuracy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:paddingLeft="70dp"
                    android:text="80%"
                    android:textColor="#333333"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="32dp">
                    <TextView
                        android:paddingLeft="10dp"
                        android:textColor="#666666"
                        android:text="Time Taken"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:paddingLeft="70dp"
                        android:text="4:32"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:background="@drawable/result_btn"
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:layout_height="50dp">
            <Button
                android:background="#0000"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </Button>
            <TextView
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingTop="15dp"
                android:paddingLeft="80dp"
                android:text="Try Again"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_back"
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:layout_height="50dp">
            <Button
                android:background="#0000"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </Button>
            <TextView
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:paddingTop="15dp"
                android:paddingLeft="80dp"
                android:text="Back to Home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
